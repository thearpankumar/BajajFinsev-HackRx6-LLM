# Production Environment Variables for Embedding-based RAG System

# API Authentication
API_KEY=your_production_api_key_here

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI Configuration (Required for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Embedding Configuration (Optimized for production)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_QUERY=5

# Performance Tuning (Optional overrides)
# CHUNK_SIZE=800                    # For faster processing
# MAX_CHUNKS_PER_QUERY=3            # For lower latency
# CHUNK_SIZE=1200                   # For higher accuracy
# MAX_CHUNKS_PER_QUERY=7            # For more comprehensive answers